                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pencil1_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="46 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Pencil2.png -->
                    <LinearLayout
                        android:id="@+id/pencil2_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/pencil2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pencil2"
                            android:contentDescription="Карандаш модель 2"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/pencil2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Карандаш 2"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/pencil2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pencil2_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Pencil3.jpg -->
                    <LinearLayout
                        android:id="@+id/pencil3_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pencil3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pencil3"
                            android:contentDescription="Карандаш модель 3"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/pencil3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Карандаш 3"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/pencil3_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pencil3_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Секция "Тетради" -->
            <RelativeLayout
                android:id="@+id/notebooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Тетради"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/vector_note"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Перейти"
                    android:src="@drawable/vector"
                    tools:ignore="DuplicateIds" />

            </RelativeLayout>

            <!-- Горизонтальная прокрутка изображений тетрадей -->
            <HorizontalScrollView
                android:id="@+id/notebooks_horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Notebook1.jpg -->
                    <LinearLayout
                        android:id="@+id/notebook1_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/notebook1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/notebook1"
                            android:contentDescription="Тетрадь модель 1"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/notebook1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Тетрадь 1"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/notebook1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/notebook1_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="67 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Notebook2.jpg -->
                    <LinearLayout
                        android:id="@+id/notebook2_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/notebook2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/notebook2"
                            android:contentDescription="Тетрадь модель 2"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/notebook2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Тетрадь 2"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/notebook2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="93 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/notebook2_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="77 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Notebook3.jpg -->
                    <LinearLayout
                        android:id="@+id/notebook3_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/notebook3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/notebook3"
                            android:contentDescription="Тетрадь модель 3"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/notebook3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Тетрадь 3"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

