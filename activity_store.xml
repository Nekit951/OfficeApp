<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".StoreActivity">

    <!-- Строка поиска -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:autofillHints="name"
        android:background="#FFFFFF"
        android:drawablePadding="6dp"
        android:hint="Поиск товаров..."
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Секция "Ручки" -->
            <RelativeLayout
                android:id="@+id/pen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Ручки"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/vector_pen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Перейти"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <!-- Горизонтальная прокрутка изображений ручек -->
            <HorizontalScrollView
                android:id="@+id/pen_horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pen1.jpg -->
                    <LinearLayout
                        android:id="@+id/pen1_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/pen1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pen1"
                            android:contentDescription="Ручка модель 1"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/pen1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Ручка 1"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/pen1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pen1_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Pen2.jpg -->
                    <LinearLayout
                        android:id="@+id/pen2_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/pen2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pen2"
                            android:contentDescription="Ручка модель 2"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/pen2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Ручка 2"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/pen2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90 руб."
                            android:textColor="#FF9800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pen2_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40 штук"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- Pen3.jpeg -->
                    <LinearLayout
                        android:id="@+id/pen3_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pen3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
